@model StarWarsForum.Models.ForumViewModels.ForumCreateModel
@{
    ViewData["Title"] = "Edit Forum";
}

<h1>Editing | @Model.Title</h1>

<form method="post" enctype="multipart/form-data" asp-action="Edit">
    <div id="upload">
        <label asp-for="ImageUpload" class="btn btn-dark">
            Browse <input asp-for="ImageUpload" type="file" style="display:none" />
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <textarea asp-for="Title" class="form-control"></textarea>
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <input asp-for="ForumImageUrl" type="hidden" />
    <input asp-for="Title" type="hidden" />
</form>



