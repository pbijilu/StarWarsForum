@model StarWarsForum.Models.ForumViewModels.ForumCreateModel

    <form method="post" enctype="multipart/form-data" asp-action="Create">
        <div id="upload">
            <label asp-for="ImageUpload" class="btn btn-default btn-file">
                Browse <input asp-for="ImageUpload" type="file" style="display:none" />
            </label>
            <span asp-validation-for="ImageUpload"></span>
        </div>
        <div class="form-group">
            <label asp-for="Title"></label>
            <textarea asp-for="Title" class="form-control"></textarea>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description"></span>
        </div>
        <button type="submit" id="submitPostBtn" class="btn btn-submitPost">Submit</button>
    </form>