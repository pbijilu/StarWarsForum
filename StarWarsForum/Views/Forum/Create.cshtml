@model StarWarsForum.Models.ForumViewModels.ForumCreateModel

@{
    ViewData["Title"] = "Create Forum";
}

<h1>Creating New Forum</h1>

<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="form-group">
        <span>Upload Image:</span>
        <label asp-for="ImageUpload" class="btn btn-dark">
            Browse <input asp-for="ImageUpload" type="file" style="display:none" />
        </label>
    </div>
    <div class="form-group">
        <label asp-for="Title"></label>
        <textarea asp-for="Title" class="form-control"></textarea>
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>