@model StarWarsForum.Models.TopicViewModels.NewTopicModel
@{
    ViewData["Title"] = "Create Topic";
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Start new topic | @Model.ForumTitle</h1>

    <form asp-action="Create" method="post" id="createTopicForm">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea asp-for="Content" class="form-control"></textarea>
            <span asp-validation-for="Content"></span>
        </div>
        <button type="submit" id="submitPostBtn" class="btn btn-primary">Submit new topic</button>
        <input asp-for="ForumId" type="hidden" />
        <input asp-for="ForumTitle" type="hidden" />
    </form>
}
else
{
    <h1>If you really want to understand the ways of the force please sign in, my padawan</h1>
}