@using Microsoft.AspNetCore.Identity
@inject UserManager<StarWarsForum.Data.Models.ApplicationUser> UserManager
@inject SignInManager<StarWarsForum.Data.Models.ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StarWarsForum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand navLogo" asp-controller="Home" asp-action="Index"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Forum" asp-action="Index">Forum</a>
                        </li>
                        @if (!SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Sign In</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Sign Up</a></li>
                        }
                        else
                        {
                            <li class="dropdown">
                                <a class="nav-link text-dark" href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">@UserManager.GetUserName(User)</a>
                                <ul class="dropdown-menu">
                                    <li class="dropdown-header">Profile</li>
                                    <li><a class="nav-link text-dark" asp-controller="Profile" asp-action="Detail">My Profile</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li role="separator" class="dropdown-divider"></li>
                                        <li class="dropdown-header">Admin</li>
                                        <li><a class="nav-link text-dark" asp-controller="Forum" asp-action="Create">Create Forum</a></li>
                                        <li><a class="nav-link text-dark" asp-controller="Profile" asp-action="Index">View Users</a></li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <form asp-controller="Account" asp-action="LogoutPost" method="post">
                                <button type="submit" class="btn btn-outline-dark">Sign out</button>
                        </form>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - StarWarsForum
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
