@model StarWarsForum.Models.ProfileViewModels.ProfileModel
@{
    ViewData["Title"] = Model.UserName;
}

<h1>@Model.UserName 's profile</h1>

<table class="table table-active" id="userProfileTable">
    <tbody>
        <tr>
            <td>
                <div id="userProfileImage" style="background-image: url(@Model.ProfileImageUrl)"></div>
            </td>
            <td>
                Birth Date: @Model.BirthDate.Date.ToString("d")
            </td>
            <td>
                Member Since: @Model.MemberSince.Date.ToString("d")
            </td>
        </tr>
        <tr>
            <td>
                @if (User.Identity.Name == Model.UserName)
                {
                    <span>Load New Avatar</span>
                    <form method="post" enctype="multipart/form-data" asp-controller="Profile" asp-action="UploadProfileImage">
                        <div id="upload">
                            <label class="btn btn-light btn-file">
                                Browse <input type="file" name="file" style="display:none" />
                            </label>
                        </div>
                        <button type="submit" class="btn btn-dark">Submit</button>
                    </form>
                }
            </td>
            <td>
            </td>
            <td>
            </td>
        </tr>
    </tbody>
</table>